{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Postaway",
    "description": "This is the API for a simple social media platform."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Localhost server"
    }
  ],
  "components": {
    "securitySchemes": {
      "JWT": {
        "in": "header",
        "name": "Authorization",
